<UserControl
    x:Class="BMES.Modules.ProductionViewer.Views.ProductionViewerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="600"
    d:DesignWidth="1460"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="#1E1E1E"
    FontFamily="Segoe UI"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  Стиль для карточки раздела  -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderBrush" Value="#444" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <!--  Стиль для заголовка карточки  -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#EAEAEA" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,5,0,10" />
        </Style>

        <!--  Стиль для заголовка под-блока  -->
        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <!--  Стиль для метки (названия поля)  -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0B0" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <!--  Стиль для значения  -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <!--  Стиль для разделительной линии в карточке  -->
        <Style x:Key="HeaderLineStyle" TargetType="Border">
            <Setter Property="Background" Value="#00A8E8" />
            <Setter Property="Height" Value="4" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="CornerRadius" Value="4,4,0,0" />
            <Setter Property="Margin" Value="-1,-1,-1,0" />
        </Style>

        <!--  Стиль для контейнера с данными  -->
        <Style x:Key="DataBlockStyle" TargetType="Border">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
        <Style x:Key="ArrowStyle" TargetType="Path">
            <Setter Property="Stroke" Value="#757575" />
            <Setter Property="StrokeThickness" Value="1.5" />
        </Style>
        <Style x:Key="ProcessStepStyle" TargetType="Border">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="4"
                        Opacity="0.4"
                        ShadowDepth="1"
                        Color="Black" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="10"
                                Opacity="0.6"
                                ShadowDepth="4"
                                Color="Black" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Стиль для кнопок управления конвейером  -->
        <Style x:Key="ConveyorButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="44" />
            <Setter Property="Height" Value="44" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#45a049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3e8e41"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#555"/>
                                <Setter Property="Foreground" Value="#999"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Стиль для круглой кнопки Stop  -->
        <Style x:Key="StopButtonStyle" TargetType="Button" BasedOn="{StaticResource ConveyorButtonStyle}">
            <Setter Property="Background" Value="#f44336" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#e53935"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#d32f2f"/>
                            </Trigger>
                             <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Self}}" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#555"/>
                                <Setter Property="Foreground" Value="#999"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <TextBlock
            Margin="10,-30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="18"
            FontWeight="Bold"
            Foreground="White"
            Text="Общая схема производственной цепочки" />

        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Колонка 1: Подготовка поддона  -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource HeaderLineStyle}" />
                        <TextBlock
                            Style="{StaticResource TitleStyle}"
                            Text="Подготовка поддона"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </Grid>

                    <Canvas Grid.Row="1">
                        <!--  Cleaning  -->
                        <Border
                            Canvas.Left="80"
                            Canvas.Top="10"
                            Width="120"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Очистка" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="60"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Shuttering  -->
                        <Border
                            Canvas.Left="80"
                            Canvas.Top="80"
                            Width="120"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Опалубка" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="130"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Engineering Niches  -->
                        <Border
                            Canvas.Left="80"
                            Canvas.Top="150"
                            Width="120"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Инж. ниши" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="200"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Preparation  -->
                        <Border
                            Canvas.Left="80"
                            Canvas.Top="220"
                            Width="120"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Подготовка" />
                        </Border>
                    </Canvas>
                </Grid>
            </Border>

            <!--  Колонка 2: Армирование и бетонирование  -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource HeaderLineStyle}" />
                        <TextBlock
                            Style="{StaticResource TitleStyle}"
                            Text="Армирование и бетонирование"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </Grid>
                    <Canvas Grid.Row="1">
                        <!--  Arranging Steel Cables  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="10"
                            Width="140"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Укладка тросов"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="60"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Frame Installation  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="80"
                            Width="140"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Установка каркаса"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="130"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Isolator Post  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="150"
                            Width="140"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Изоляторный пост"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="200"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Concreting  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="220"
                            Width="140"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Бетонирование" />
                        </Border>
                    </Canvas>
                </Grid>
            </Border>

            <!--  Колонка 3: Отверждение и отделка  -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource HeaderLineStyle}" />
                        <TextBlock
                            Style="{StaticResource TitleStyle}"
                            Text="Отверждение и отделка"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </Grid>
                    <Canvas Grid.Row="1">
                        <!--  Heat and Humidity Treatment (Initial)  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="10"
                            Width="160"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Термообработка (нач.)"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="150"
                            Canvas.Top="60"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Smoothing Station (Finishing)  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="80"
                            Width="160"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Сглаживание" />
                        </Border>
                        <Path
                            Canvas.Left="150"
                            Canvas.Top="130"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Heat and Humidity Treatment (Final)  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="150"
                            Width="160"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Термообработка (финал)"
                                TextWrapping="Wrap" />
                        </Border>
                    </Canvas>
                </Grid>
            </Border>

            <!--  Колонка 4: Распалубка и готовый продукт  -->
            <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource HeaderLineStyle}" />
                        <TextBlock
                            Style="{StaticResource TitleStyle}"
                            Text="Распалубка и готовый продукт"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </Grid>
                    <Canvas Grid.Row="1">
                        <!--  De-shuttering  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="10"
                            Width="140"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Распалубка" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="60"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  De-tensioning Steel Cables  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="80"
                            Width="140"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Снятие натяжения"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="130"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Removal of the Finished Product  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="150"
                            Width="140"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Извлечение продукта"
                                TextWrapping="Wrap" />
                        </Border>
                    </Canvas>
                </Grid>
            </Border>

            <!--  Колонка 5: Остаток на складе  -->
            <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                <Grid>
                    <Border Style="{StaticResource HeaderLineStyle}" />
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleStyle}" Text="Информация" />
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Температура:" />
                                <TextBlock Style="{StaticResource LabelStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Наружная: {0:F1} °C">
                                            <Binding Path="OutdoorTemperature" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <TextBlock Style="{StaticResource LabelStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Внутренняя: {0:F1} °C">
                                            <Binding Path="IndoorTemperature" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Влажность:" />
                                <TextBlock Style="{StaticResource LabelStyle}" Text="{Binding TvoHumidity, StringFormat=ТВО: {0} %}" />
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Соединение:" />
                                <TextBlock Style="{StaticResource LabelStyle}" Text="{Binding IsConnected, StringFormat=Статус: {0}}" />
                                <Button Command="{Binding ConnectCommand}" Content="Подключиться" Margin="0,5,0,0" />
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Конвейер 1:" />
                                <CheckBox IsChecked="{Binding Fc1Forward}" Content="fc1Forward" Foreground="White" IsEnabled="False"/>
                                <Button Command="{Binding ToggleFc1ForwardCommand}" Content="Старт/Стоп" Margin="0,5,0,0" />
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Конвейер 2:" />
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" HorizontalAlignment="Center" Command="{Binding SetFc2BackwardCommand}" Style="{StaticResource ConveyorButtonStyle}" Content="◀" ToolTip="Назад"/>
                                    <Button Grid.Column="1" HorizontalAlignment="Center" Command="{Binding SetFc2StopCommand}" Style="{StaticResource StopButtonStyle}" Content="■" ToolTip="Стоп"/>
                                    <Button Grid.Column="2" HorizontalAlignment="Center" Command="{Binding SetFc2ForwardCommand}" Style="{StaticResource ConveyorButtonStyle}" Content="▶" ToolTip="Вперед"/>
                                </Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                    <TextBlock Text="Назад:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                                    <CheckBox IsChecked="{Binding Fc2Backward}" IsEnabled="False" Margin="5,0,10,0"/>
                                    <TextBlock Text="Стоп:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                                    <CheckBox IsChecked="{Binding Fc2Stop}" IsEnabled="False" Margin="5,0,10,0"/>
                                    <TextBlock Text="Вперед:" Style="{StaticResource LabelStyle}" VerticalAlignment="Center"/>
                                    <CheckBox IsChecked="{Binding Fc2Forward}" IsEnabled="False" Margin="5,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>