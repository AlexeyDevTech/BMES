<UserControl
    x:Class="BMES.Modules.ProductionViewer.Views.ProductionViewerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="600"
    d:DesignWidth="1460"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="#1E1E1E"
    FontFamily="Segoe UI"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  Стиль для карточки раздела  -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderBrush" Value="#444" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <!--  Стиль для заголовка карточки  -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#EAEAEA" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,5,0,10" />
        </Style>

        <!--  Стиль для заголовка под-блока  -->
        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <!--  Стиль для метки (названия поля)  -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0B0" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <!--  Стиль для значения  -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <!--  Стиль для разделительной линии в карточке  -->
        <Style x:Key="HeaderLineStyle" TargetType="Border">
            <Setter Property="Background" Value="#00A8E8" />
            <Setter Property="Height" Value="4" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="CornerRadius" Value="4,4,0,0" />
            <Setter Property="Margin" Value="-1,-1,-1,0" />
        </Style>

        <!--  Стиль для контейнера с данными  -->
        <Style x:Key="DataBlockStyle" TargetType="Border">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
        <Style x:Key="ArrowStyle" TargetType="Path">
            <Setter Property="Stroke" Value="#757575" />
            <Setter Property="StrokeThickness" Value="1.5" />
        </Style>
        <Style x:Key="ProcessStepStyle" TargetType="Border">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="4"
                        Opacity="0.4"
                        ShadowDepth="1"
                        Color="Black" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="10"
                                Opacity="0.6"
                                ShadowDepth="4"
                                Color="Black" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <TextBlock
            Margin="10,-30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="18"
            FontWeight="Bold"
            Foreground="White"
            Text="Общая схема производственной цепочки" />

        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Колонка 1: Подготовка поддона  -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource HeaderLineStyle}" />
                        <TextBlock
                            Style="{StaticResource TitleStyle}"
                            Text="Подготовка поддона"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </Grid>

                    <Canvas Grid.Row="1">
                        <!--  Cleaning  -->
                        <Border
                            Canvas.Left="80"
                            Canvas.Top="10"
                            Width="120"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Очистка" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="60"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Shuttering  -->
                        <Border
                            Canvas.Left="80"
                            Canvas.Top="80"
                            Width="120"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Опалубка" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="130"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Engineering Niches  -->
                        <Border
                            Canvas.Left="80"
                            Canvas.Top="150"
                            Width="120"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Инж. ниши" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="200"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Preparation  -->
                        <Border
                            Canvas.Left="80"
                            Canvas.Top="220"
                            Width="120"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Подготовка" />
                        </Border>
                    </Canvas>
                </Grid>
            </Border>

            <!--  Колонка 2: Армирование и бетонирование  -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource HeaderLineStyle}" />
                        <TextBlock
                            Style="{StaticResource TitleStyle}"
                            Text="Армирование и бетонирование"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </Grid>
                    <Canvas Grid.Row="1">
                        <!--  Arranging Steel Cables  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="10"
                            Width="140"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Укладка тросов"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="60"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Frame Installation  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="80"
                            Width="140"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Установка каркаса"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="130"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Isolator Post  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="150"
                            Width="140"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Изоляторный пост"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="200"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Concreting  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="220"
                            Width="140"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Бетонирование" />
                        </Border>
                    </Canvas>
                </Grid>
            </Border>

            <!--  Колонка 3: Отверждение и отделка  -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource HeaderLineStyle}" />
                        <TextBlock
                            Style="{StaticResource TitleStyle}"
                            Text="Отверждение и отделка"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </Grid>
                    <Canvas Grid.Row="1">
                        <!--  Heat and Humidity Treatment (Initial)  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="10"
                            Width="160"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Термообработка (нач.)"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="150"
                            Canvas.Top="60"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Smoothing Station (Finishing)  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="80"
                            Width="160"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Сглаживание" />
                        </Border>
                        <Path
                            Canvas.Left="150"
                            Canvas.Top="130"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Heat and Humidity Treatment (Final)  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="150"
                            Width="160"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Термообработка (финал)"
                                TextWrapping="Wrap" />
                        </Border>
                    </Canvas>
                </Grid>
            </Border>

            <!--  Колонка 4: Распалубка и готовый продукт  -->
            <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource HeaderLineStyle}" />
                        <TextBlock
                            Style="{StaticResource TitleStyle}"
                            Text="Распалубка и готовый продукт"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </Grid>
                    <Canvas Grid.Row="1">
                        <!--  De-shuttering  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="10"
                            Width="140"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Распалубка" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="60"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  De-tensioning Steel Cables  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="80"
                            Width="140"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Снятие натяжения"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="130"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Removal of the Finished Product  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="150"
                            Width="140"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Извлечение продукта"
                                TextWrapping="Wrap" />
                        </Border>
                    </Canvas>
                </Grid>
            </Border>

            <!--  Колонка 5: Остаток на складе  -->
            <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                <Grid>
                    <Border Style="{StaticResource HeaderLineStyle}" />
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleStyle}" Text="Информация" />
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Температура:" />
                                <TextBlock Style="{StaticResource LabelStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Наружная: {0:F1} °C">
                                            <Binding Path="OutdoorTemperature" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <TextBlock Style="{StaticResource LabelStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Внутренняя: {0:F1} °C">
                                            <Binding Path="IndoorTemperature" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Влажность:" />
                                <TextBlock Style="{StaticResource LabelStyle}" Text="{Binding TvoHumidity, StringFormat=ТВО: {0} %}" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>