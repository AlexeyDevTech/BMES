<UserControl
    x:Class="BMES.Modules.ProductionViewer.Views.ProductionViewerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="300"
    d:DesignWidth="1200"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="#1E1E1E"
    FontFamily="Segoe UI"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  Стиль для карточки раздела  -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderBrush" Value="#444" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <!--  Стиль для заголовка карточки  -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#EAEAEA" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,5,0,10" />
        </Style>

        <!--  Стиль для заголовка под-блока  -->
        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <!--  Стиль для метки (названия поля)  -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0B0" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <!--  Стиль для значения  -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <!--  Стиль для разделительной линии в карточке  -->
        <Style x:Key="HeaderLineStyle" TargetType="Border">
            <Setter Property="Background" Value="#00A8E8" />
            <Setter Property="Height" Value="4" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="CornerRadius" Value="4,4,0,0" />
            <Setter Property="Margin" Value="-1,-1,-1,0" />
        </Style>

        <!--  Стиль для контейнера с данными  -->
        <Style x:Key="DataBlockStyle" TargetType="Border">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <TextBlock
            Margin="10,-30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="18"
            FontWeight="Bold"
            Foreground="White"
            Text="Общая схема производственной цепочки" />

        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <!--  Колонка 1: Сырье с карьера  -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource HeaderLineStyle}" />
                        <TextBlock Style="{StaticResource TitleStyle}" Text="Предварительная обработка"  TextWrapping="Wrap" TextAlignment="Center"/>
                    </Grid>
                    
                    <!--  Содержимое карточки "Сырье"  -->
                    <Canvas />
                </Grid>
            </Border>

            <!--  Колонка 2: Цех дробления  -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Border Style="{StaticResource HeaderLineStyle}" />
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleStyle}" Text="Цех дробления" />
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Q. КД" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource LabelStyle}" Text="Факт, т/ч: " />
                                    <TextBlock Style="{StaticResource ValueStyle}" Text="2072.50" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource LabelStyle}" Text="План, т/ч: " />
                                    <TextBlock Style="{StaticResource ValueStyle}" Text="3500.00" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Q. КСМД" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource LabelStyle}" Text="Факт, т/ч: " />
                                    <TextBlock Style="{StaticResource ValueStyle}" Text="479.99" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource LabelStyle}" Text="План, т/ч: " />
                                    <TextBlock Style="{StaticResource ValueStyle}" Text="452.95" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Колонка 3: Цех обогащения  -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Border Style="{StaticResource HeaderLineStyle}" />
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleStyle}" Text="Цех обогащения" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Margin="0,0,2,5"
                                Style="{StaticResource DataBlockStyle}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Q. Ср. произ-ть" />
                                    <TextBlock Style="{StaticResource LabelStyle}" Text="Факт, т/ч: 578" />
                                    <TextBlock Style="{StaticResource LabelStyle}" Text="План, т/ч: 602.5" />
                                </StackPanel>
                            </Border>
                            <Border
                                Grid.Column="1"
                                Margin="2,0,2,5"
                                Style="{StaticResource DataBlockStyle}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Q. Ср. мельниц" />
                                    <TextBlock Style="{StaticResource LabelStyle}" Text="Факт, т/ч: 678 380" />
                                    <TextBlock Style="{StaticResource LabelStyle}" Text="План, т/ч: 611 638" />
                                </StackPanel>
                            </Border>
                            <Border
                                Grid.Column="2"
                                Margin="2,0,0,5"
                                Style="{StaticResource DataBlockStyle}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Q. Ср. мельниц" />
                                    <TextBlock Style="{StaticResource LabelStyle}" Text="Факт, т/ч: 605 444" />
                                    <TextBlock Style="{StaticResource LabelStyle}" Text="План, т/ч: 627 666" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Колонка 4: ФОК  -->
            <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                <Grid>
                    <Border Style="{StaticResource HeaderLineStyle}" />
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleStyle}" Text="ФОК" />
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Q. об. маш." />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource LabelStyle}" Text="Факт, т/ч: " />
                                    <TextBlock Style="{StaticResource ValueStyle}" Text="678.14" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource LabelStyle}" Text="План, т/ч: " />
                                    <TextBlock Style="{StaticResource ValueStyle}" Text="991.70" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Колонка 5: Остаток на складе  -->
            <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                <Grid>
                    <Border Style="{StaticResource HeaderLineStyle}" />
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleStyle}" Text="Остаток на складе" />
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Отгрузка окатышей" />
                                <TextBlock Style="{StaticResource LabelStyle}" Text="Факт, т/сут: 17 840" />
                                <TextBlock Style="{StaticResource LabelStyle}" Text="План, т/сут: 22 080" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
