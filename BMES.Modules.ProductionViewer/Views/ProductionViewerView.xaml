<UserControl
    x:Class="BMES.Modules.ProductionViewer.Views.ProductionViewerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="600"
    d:DesignWidth="1460"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="#1E1E1E"
    FontFamily="Segoe UI"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DropShadowEffect x:Key="DefaultShadow" ShadowDepth="2" BlurRadius="5" Opacity="0.3" Color="Black"/>
        <DropShadowEffect x:Key="HoverShadow" ShadowDepth="4" BlurRadius="10" Opacity="0.4" Color="Black"/>
        <!--  Стиль для карточки раздела  -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderBrush" Value="#444" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <!--  Стиль для заголовка карточки  -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#EAEAEA" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,5,0,10" />
        </Style>

        <!--  Стиль для заголовка под-блока  -->
        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <!--  Стиль для метки (названия поля)  -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0B0" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <!--  Стиль для значения  -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <!--  Стиль для разделительной линии в карточке  -->
        <Style x:Key="HeaderLineStyle" TargetType="Border">
            <Setter Property="Background" Value="#00A8E8" />
            <Setter Property="Height" Value="4" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="CornerRadius" Value="4,4,0,0" />
            <Setter Property="Margin" Value="-1,-1,-1,0" />
        </Style>

        <!--  Стиль для контейнера с данными  -->
        <Style x:Key="DataBlockStyle" TargetType="Border">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
        <Style x:Key="ArrowStyle" TargetType="Path">
            <Setter Property="Stroke" Value="#757575" />
            <Setter Property="StrokeThickness" Value="1.5" />
        </Style>
        <Style x:Key="ProcessStepStyle" TargetType="Border">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="4"
                        Opacity="0.4"
                        ShadowDepth="1"
                        Color="Black" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="10"
                                Opacity="0.6"
                                ShadowDepth="4"
                                Color="Black" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Material Design Base Button Style -->
        <Style x:Key="MaterialButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#2196F3" /> <!-- Material Blue -->
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.25" Color="Black"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1976D2" /> <!-- Darker Blue -->
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.3" Color="Black"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1565C0" /> <!-- Even Darker Blue -->
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="2" Opacity="0.2" Color="Black"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BDBDBD" />
                                <Setter Property="Foreground" Value="#757575" />
                                <Setter Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for round icon-only buttons -->
        <Style x:Key="MaterialIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.25" Color="Black"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="background" Fill="{TemplateBinding Background}"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="background" Value="#1976D2"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.3" Color="Black"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="background" Value="#1565C0"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="2" Opacity="0.2" Color="Black"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="background" Value="#BDBDBD" />
                                <Setter Property="Foreground" Value="#757575" />
                                <Setter Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stop Button Style (Red) -->
        <Style x:Key="MaterialStopButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialIconButtonStyle}">
            <Setter Property="Background" Value="#F44336"/> <!-- Material Red -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="background" Fill="{TemplateBinding Background}"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="background" Value="#D32F2F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="background" Value="#C62828"/>
                            </Trigger>
                             <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="background" Value="#BDBDBD" />
                                <Setter Property="Foreground" Value="#757575" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <TextBlock
            Margin="10,-30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="18"
            FontWeight="Bold"
            Foreground="White"
            Text="Общая схема производственной цепочки" />

        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Колонка 1: Подготовка поддона  -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource HeaderLineStyle}" />
                        <TextBlock
                            Style="{StaticResource TitleStyle}"
                            Text="Подготовка поддона"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </Grid>

                    <Canvas Grid.Row="1">
                        <!--  Cleaning  -->
                        <Border
                            Canvas.Left="80"
                            Canvas.Top="10"
                            Width="120"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Очистка" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="60"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Shuttering  -->
                        <Border
                            Canvas.Left="80"
                            Canvas.Top="80"
                            Width="120"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Опалубка" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="130"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Engineering Niches  -->
                        <Border
                            Canvas.Left="80"
                            Canvas.Top="150"
                            Width="120"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Инж. ниши" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="200"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Preparation  -->
                        <Border
                            Canvas.Left="80"
                            Canvas.Top="220"
                            Width="120"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Подготовка" />
                        </Border>
                    </Canvas>
                </Grid>
            </Border>

            <!--  Колонка 2: Армирование и бетонирование  -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource HeaderLineStyle}" />
                        <TextBlock
                            Style="{StaticResource TitleStyle}"
                            Text="Армирование и бетонирование"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </Grid>
                    <Canvas Grid.Row="1">
                        <!--  Arranging Steel Cables  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="10"
                            Width="140"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Укладка тросов"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="60"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Frame Installation  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="80"
                            Width="140"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Установка каркаса"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="130"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Isolator Post  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="150"
                            Width="140"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Изоляторный пост"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="200"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Concreting  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="220"
                            Width="140"
                            Height="50"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"

                                Foreground="White"
                                Text="Бетонирование" />
                        </Border>
                    </Canvas>
                </Grid>
            </Border>

            <!--  Колонка 3: Отверждение и отделка  -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource HeaderLineStyle}" />
                        <TextBlock
                            Style="{StaticResource TitleStyle}"
                            Text="Отверждение и отделка"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </Grid>
                    <Canvas Grid.Row="1">
                        <!--  Heat and Humidity Treatment (Initial)  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="10"
                            Width="160"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Термообработка (нач.)"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="150"
                            Canvas.Top="60"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Smoothing Station (Finishing)  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="80"
                            Width="160"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Сглаживание" />
                        </Border>
                        <Path
                            Canvas.Left="150"
                            Canvas.Top="130"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Heat and Humidity Treatment (Final)  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="150"
                            Width="160"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Термообработка (финал)"
                                TextWrapping="Wrap" />
                        </Border>
                    </Canvas>
                </Grid>
            </Border>

            <!--  Колонка 4: Распалубка и готовый продукт  -->
            <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource HeaderLineStyle}" />
                        <TextBlock
                            Style="{StaticResource TitleStyle}"
                            Text="Распалубка и готовый продукт"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </Grid>
                    <Canvas Grid.Row="1">
                        <!--  De-shuttering  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="10"
                            Width="140"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Распалубка" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="60"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  De-tensioning Steel Cables  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="80"
                            Width="140"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Снятие натяжения"
                                TextWrapping="Wrap" />
                        </Border>
                        <Path
                            Canvas.Left="140"
                            Canvas.Top="130"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Data="M0,0 L0,20 L-5,15 M0,20 L5,15"
                            Style="{StaticResource ArrowStyle}" />

                        <!--  Removal of the Finished Product  -->
                        <Border
                            Canvas.Left="70"
                            Canvas.Top="150"
                            Width="140"
                            Height="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ProcessStepStyle}">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="Извлечение продукта"
                                TextWrapping="Wrap" />
                        </Border>
                    </Canvas>
                </Grid>
            </Border>

            <!--  Колонка 5: Остаток на складе  -->
            <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                <Grid>
                    <Border Style="{StaticResource HeaderLineStyle}" />
                    <StackPanel>
                        <TextBlock Style="{StaticResource TitleStyle}" Text="Информация" />
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Температура:" />
                                <TextBlock Style="{StaticResource LabelStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Наружная: {0:F1} °C">
                                            <Binding Path="OutdoorTemperature" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <TextBlock Style="{StaticResource LabelStyle}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Внутренняя: {0:F1} °C">
                                            <Binding Path="IndoorTemperature" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Влажность:" />
                                <TextBlock Style="{StaticResource LabelStyle}" Text="{Binding TvoHumidity, StringFormat=ТВО: {0} %}" />
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Соединение:" />
                                <TextBlock Style="{StaticResource LabelStyle}" Text="{Binding IsConnected, StringFormat=Статус: {0}}" />
                                <Button
                                    Margin="0,5,0,0"
                                    Command="{Binding ConnectCommand}"
                                    Style="{StaticResource MaterialButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="M13,9H11V7H13M13,17H11V11H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z" Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                                        <TextBlock Text="Подключиться" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Конвейер 1:" />
                                <CheckBox
                                    Content="fc1Forward"
                                    Foreground="White"
                                    IsChecked="{Binding Fc1Forward}"
                                    IsEnabled="False" />
                                <Button
                                    Margin="0,5,0,0"
                                    Command="{Binding ToggleFc1ForwardCommand}"
                                    Style="{StaticResource MaterialButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="M8,5.14V19.14L19,12.14L8,5.14Z" Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                                        <TextBlock Text="Старт/Стоп" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource DataBlockStyle}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource SubHeaderStyle}" Text="Конвейер 2:" />
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                        Grid.Column="0"
                                        Margin="5,0"
                                        HorizontalAlignment="Center"
                                        Command="{Binding SetFc2BackwardCommand}"
                                        Style="{StaticResource MaterialIconButtonStyle}"
                                        ToolTip="Назад">
                                        <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" Fill="White" Width="20" Height="20" Stretch="Uniform"/>
                                    </Button>
                                    <Button
                                        Grid.Column="1"
                                        Margin="5,0"
                                        HorizontalAlignment="Center"
                                        Command="{Binding SetFc2StopCommand}"
                                        Style="{StaticResource MaterialStopButtonStyle}"
                                        ToolTip="Стоп">
                                        <Path Data="M18,18H6V6H18V18Z" Fill="White" Width="16" Height="16" Stretch="Uniform"/>
                                    </Button>
                                    <Button
                                        Grid.Column="2"
                                        Margin="5,0"
                                        HorizontalAlignment="Center"
                                        Command="{Binding SetFc2ForwardCommand}"
                                        Style="{StaticResource MaterialIconButtonStyle}"
                                        ToolTip="Вперед">
                                        <Path Data="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z" Fill="White" Width="20" Height="20" Stretch="Uniform"/>
