<UserControl x:Class="BMES.Modules.Mimic.Views.Controls.Tank"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="50">
    <Grid>
        <Rectangle Stroke="Black" StrokeThickness="1" Fill="LightGray" Margin="0,10,0,0"/>
        <Rectangle Stroke="Black" StrokeThickness="1" Fill="Blue" VerticalAlignment="Bottom" Height="{Binding Level}" MaxHeight="90"/>
    </Grid>
</UserControl>
