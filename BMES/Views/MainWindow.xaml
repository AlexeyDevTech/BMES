<Window
    x:Class="BMES.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Regions="clr-namespace:BMES.Regions;assembly=BMES.Regions"
    xmlns:local="clr-namespace:BMES"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    Width="1525"
    Height="850"
    prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid x:Name="TopBoard" Grid.Row="0">
            <ContentControl prism:RegionManager.RegionName="{x:Static Regions:RegionNames.TopMenu}" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid x:Name="LeftBoard" Grid.Column="0">
                <ContentControl prism:RegionManager.RegionName="{x:Static Regions:RegionNames.LeftMenu}" />
            </Grid>
            <Grid Grid.Column="1">
                <ContentControl prism:RegionManager.RegionName="{x:Static Regions:RegionNames.ContentRegion}" />
            </Grid>
        </Grid>
    </Grid>
</Window>
