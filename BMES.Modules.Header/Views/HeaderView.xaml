    <Grid Background="#23272A">
        <Grid Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="60" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <ContentControl
                    Padding="0,0,0,4"
                    Content="{StaticResource LogoIcon}" Width="30" />
            </StackPanel>
            <Grid Grid.Column="1" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock
                        HorizontalAlignment="Right"
                        FontSize="14"
                        Foreground="#FFFFFF"
                        Text="{Binding UserName}" />
                    <TextBlock
                        HorizontalAlignment="Right"
                        FontSize="12"
                        Foreground="#B0B0B0"
                        Text="{Binding UserRole}" />
                </StackPanel>
                <Border
                    Grid.Column="1"
                    Width="40"
                    Height="40"
                    Margin="20,0"
                    Background="#505457"
                    CornerRadius="20">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="White"
                        Text="{Binding UserInitials}" />
                </Border>

            </Grid>
            <Grid Grid.Column="2" Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource HeaderButtonStyle}" ToolTip="Настройки">
                    <ContentControl Width="20" Content="{StaticResource SettingsIcon}" />
                </Button>
                <Button
                    Grid.Column="1"
                    Style="{StaticResource HeaderButtonStyle}"
                    ToolTip="Уведомления">
                    <ContentControl Width="20" Content="{StaticResource NotificationsIcon}" />
                </Button>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
